{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "esnext.asynciterable",
            "dom"
        ],
        "paths": {
            "*": ["node_modules/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "packages/**/node_modules/*",
    ]
}
